@model GoogleMapsProject.Models.PontosModels

<!DOCTYPE html>
<html>
<head>
    <title>Editar Ponto</title>
</head>
<body>
    <h1>Editar Ponto</h1>

    <form asp-action="Edit">
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div>
            <label>Latitude</label>
            <input asp-for="lat" />
        </div>
        <div>
            <label>Longitude</label>
            <input asp-for="lon" />
        </div>
        <div>
            <label>Localização</label>
            <input asp-for="loc" />
        </div>
        <div>
            <input type="submit" value="Salvar" />
        </div>
    </form>

    <a href="@Url.Action("Index")">Voltar à Lista</a>
</body>
</html>
